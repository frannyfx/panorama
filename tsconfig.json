{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@utils/*": ["server/utils/*"]
		}
	},
	"include": [
		"src/server/**/*",
		"src/server/*.json", 
		"src/shared/**/*"
	]
}